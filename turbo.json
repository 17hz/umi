{
  "$schema": "https://turborepo.org/schema.json",
  "baseBranch": "origin/master",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["lib/**"]
    },
    "build:extra": {
      "cache": false
    },
    "build:client": {
      "cache": false
    },
    "dev": {
      "cache": false
    }
  },
  "globalDependencies": ["tsconfig.base.json", "tsconfig.json"]
}
